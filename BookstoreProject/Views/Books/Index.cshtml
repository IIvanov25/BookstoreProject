@model IEnumerable<BookstoreProject.Models.Book>

@{
	ViewData["Title"] = "Books";
}

<div class="invisible-container"></div> <!-- Invisible container on the left -->

<div class="main-container">
<h1>Books</h1>

<p>
	<a asp-action="Create" class="button-link">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Author)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Category)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Author)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Category.Name)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="button-mainfunc">Edit</a>
					<a asp-action="Details" asp-route-id="@item.Id" class="button-mainfunc">Details</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="button-mainfunc">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>
